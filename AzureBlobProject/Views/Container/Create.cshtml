@model Container

    <div class="container border p-3">
        <h2 class="text-info pb-2">Create Container</h2>
        <form method="post" asp-action="Create">
            <div class="backgroundWhite">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name" class="col-form-label"></label>
                    </div>
                    <div class="col-4 row-cols-2">
                        <input asp-for="Name" class="form-control" />
                        <br/>
                    <select class="form-select" asp-for="AccessLevel" aria-label="Select Access Level">
                        <option selected>Select privacy level</option>
                        <option value ="None">None</option>
                        <option value="Blob">Blob</option>
                        <option value="BlobContainer">BlobContainer</option>
                    </select>
                    
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Create" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
